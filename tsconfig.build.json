{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "lib": ["ES6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "removeComments": true,
    "rootDir": ".",
    "sourceMap": false,
    "target": "ES5"
  },
  "include": [
    "src/**/*"
  ]
}
