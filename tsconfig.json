{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["ES6", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "ES5"
  },
  "include": [
    "src/**/*"
  ]
}
